<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="18dp"
    android:orientation="vertical"
    tools:context=".TweenAnimationActivity">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/tween_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="平移（xml）"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/tween_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="透明度（xml）"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/tween_btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="伸缩（xml）"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/tween_btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="旋转（xml）"
                android:textAllCaps="false"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/tween_btn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="复合动画（xml）"
                android:textAllCaps="false"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <Button
                android:id="@+id/tween_btn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="平移（Java）"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/tween_btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="透明度（Java）"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/tween_btn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="伸缩（Java）"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/tween_btn9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="旋转（Java）"
                android:textAllCaps="false"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/tween_btn10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="复合动画（Java）"
                android:textAllCaps="false"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/image1"
        android:layout_below="@+id/ll_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>


    <Button
        android:id="@+id/tween_btn11"
        android:layout_marginHorizontal="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重置"
        android:textAllCaps="false"
        tools:ignore="MissingConstraints" />

</RelativeLayout>